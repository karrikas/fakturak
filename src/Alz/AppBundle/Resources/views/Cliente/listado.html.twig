{% extends 'AlzAppBundle::layout.html.twig' %}

{% block title %}{{ "Clientes"|trans }}{% endblock %}

{% block content %}
<div class="btn-group pull-right" role="group" aria-label="">
  <a type="button" class="btn btn-default" href="{{ path('alz_app_cliente_nuevo') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ "Nuevo cliente"|trans }}</a>
</div>

<div class="page-header">
    <h1>{{ "Clientes"|trans }}</h1>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>{{ "Nombre"|trans }}</th>
                <th>{{ "Cif"|trans }}</th>
                <th>{{ "Tel√©fono"|trans }}</th>
                <th>{{ "Email"|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for cliente in clientes %}
            <tr>
                <td><a href="{{ path('alz_app_cliente_ver', { id: cliente.id }) }}">{{ cliente.nombre }}</a></td>
                <td>{{ cliente.cif }}</td>
                <td>{{ cliente.telefono }}</td>
                <td>{{ cliente.email }}</td>
            </tr>
            {% endfor %}
        </tbody>

    </table>
</div>

{{ knp_pagination_render(clientes) }}
{% endblock %}
